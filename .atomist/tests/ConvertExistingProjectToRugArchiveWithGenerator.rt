scenario ConvertExistingProjectToRugArchiveWithGenerator should add default .atomist directory with a default generator for the archive

let rug_archive_name = "myRugArchive"
let rug_archive_group_id = "myRugGroup"
let version = "0.0.1"
let generator_name = "DefaultGenerator"

given
  Empty

when
  ConvertExistingProjectToRugArchiveWithGenerator

then
  fileExists ".atomist/manifest.yml"
    and fileContains ".atomist/manifest.yml" 'artifact: "myRugArchive"'
    and fileContains ".atomist/manifest.yml" 'group: "myRugGroup"'
    and fileContains ".atomist/manifest.yml" "0.0.1"
    and fileExists ".atomist/editors/DefaultGenerator.rug"
    and fileContains ".atomist/editors/DefaultGenerator.rug" "param project_name: @project_name"
    and fileContains ".atomist/editors/DefaultGenerator.rug" "generator DefaultGenerator"
    and fileExists ".atomist/tests/DefaultGenerator.rt"
    and fileContains ".atomist/tests/DefaultGenerator.rt" "scenario DefaultGenerator"


scenario ConvertExistingProjectToRugArchiveWithGenerator with long but valid archive and generator names

let rug_archive_name = "spring-cloud-cfg-srvr"
let version = "0.0.1"
let generator_name = "NewSpringCloudConfigServer"
let rug_archive_group_id = "myRugGroup"

given
  Empty

when
  ConvertExistingProjectToRugArchiveWithGenerator

then
  fileExists ".atomist/manifest.yml"
    and fileContains ".atomist/manifest.yml" 'artifact: "spring-cloud-cfg-srvr"'
    and fileContains ".atomist/manifest.yml" 'group: "myRugGroup"'
    and fileContains ".atomist/manifest.yml" "0.0.1"
    and fileContains ".atomist/editors/NewSpringCloudConfigServer.rug" "param project_name: @project_name"
    and fileExists ".atomist/editors/NewSpringCloudConfigServer.rug"
    and fileContains ".atomist/editors/NewSpringCloudConfigServer.rug" "generator NewSpringCloudConfigServer"
    and fileExists ".atomist/tests/NewSpringCloudConfigServer.rt"
    and fileContains ".atomist/tests/NewSpringCloudConfigServer.rt" "scenario NewSpringCloudConfigServer"


scenario ConvertExistingProjectToRugArchiveWithGenerator should ignore project if it already contains a .atomist directory

let rug_archive_name = "myRugArchive"
let rug_archive_group_id = "myRugGroup"
let version = "0.0.1"
let generator_name = "MyGenerator"

given
  ArchiveRoot

when
  ConvertExistingProjectToRugArchiveWithGenerator

then
  NoChange


scenario ConvertExistingProjectToRugArchiveWithGenerator with missing parameters should fail

let rug_archive_name = "spring-config"

given
  Empty

when
  ConvertExistingProjectToRugArchiveWithGenerator

then
  MissingParameters
