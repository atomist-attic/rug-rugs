scenario AddRugEditor should add a new blank editor to an existing project

let editor_name = "MyNewEditor"
let project_name = "MyProject"

given
  Empty

when
  AddRugEditor

then
  fileExists ".atomist/editors/MyNewEditor.rug"
  and fileContains ".atomist/editors/MyNewEditor.rug" "editor MyNewEditor"
  and fileExists ".atomist/tests/MyNewEditor.rt"
  and fileContains ".atomist/tests/MyNewEditor.rt" "scenario MyNewEditor"
  and fileExists ".atomist/templates/MyNewEditorTemplate.vm"
