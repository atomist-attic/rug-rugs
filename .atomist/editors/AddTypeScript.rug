@description "adds a TypeScript supporting files to an existing Rug Archive project"
@tag "rug"
@tag "atomist"
@tag "typscript"
editor AddTypeScript

precondition IsRugArchive

@displayName "Rug Version"
@description "specific version or version range for Rug"
@validInput """a valid Node.js version range, e.g., '0.11.0' or '>= 0.11.0', see https://docs.npmjs.com/misc/semver"""
@optional
@default "0.11.0"
param rug_version: @version_range

let package_json_path = ".atomist/package.json"
let tsconfig_json_path = ".atomist/tsconfig.json"

with Project begin
  do copyEditorBackingFileOrFail package_json_path
  do copyEditorBackingFileOrFail tsconfig_json_path
end

with File when path = package_json_path
  do regexpReplace '"@atomist/rug":.*' { '"@atomist/rug": "' + rug_version + '"' }
