scenario AddManifestYml should add the Rug manifest

let archive_name = "my-rug-archive"
let group_id = "my-rug-group"
let version = "0.0.1"
let manifest = ".atomist/manifest.yml"

given
  Empty

when
  AddManifestYml

then
  fileExists manifest
    and fileContains manifest { 'artifact: "' + archive_name + '"' }
    and fileContains manifest { 'group: "' + group_id + '"' }
    and fileContains manifest version
    and { !result.fileContains(manifest, "rug-editors"); }
    and { !result.fileContains(manifest, "atomist-rugs"); }
    and { !result.fileContains(manifest, "repo:"); }
    and { !result.fileContains(manifest, "branch:"); }
    and { !result.fileContains(manifest, "sha:"); }
    and { !result.fileContains(manifest, "---"); }


scenario AddManifestYml should add the Rug manifest using default version

let archive_name = "my-rug-archive"
let group_id = "my-rug-group"
let manifest = ".atomist/manifest.yml"

given
  Empty

when
  AddManifestYml

then
  fileExists manifest
    and fileContains manifest { 'artifact: "' + archive_name + '"' }
    and fileContains manifest { 'group: "' + group_id + '"' }
    and fileContains manifest "0.1.0"


scenario AddManifestYml should fail if parameters are missing

given
  Empty

when
  AddManifestYml archive_name = "my-rug-archive"

then
  MissingParameters


scenario AddManifestYml should make no change if project already contains a manifest

given
  ArchiveRoot

when
  AddManifestYml archive_name = "my-rug-archive", group_id = "my-rug-group",
    version = "0.0.1"

then
  NoChange
