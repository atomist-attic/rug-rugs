scenario AddRugExecutor should add a new blank executor to an existing Rug Archive project

let executor_name = "MyNewExecutor"
let project_name = "MyProject"
let description = "This executor rocks"
let bot_intent = "Do it"

given
  .atomist/manifest.yml = """group: test-rugs
artifact: test-manifest
version: "0.1.0"
requires: "[0.6.0,1.0.0)"
dependencies:
extensions:
"""

.atomist/package.json = """{
  "dependencies": {
    "@atomist/rug": "0.12.0"
  }
}"""

when
  AddRugExecutor

then
  fileExists ".atomist/executors/MyNewExecutor.ts"
    and fileContains ".atomist/executors/MyNewExecutor.ts" "var myNewExecutor: Executor"
    and fileContains ".atomist/executors/MyNewExecutor.ts" { "description: \"" + description + "\"" }
    and fileContains ".atomist/executors/MyNewExecutor.ts" { "name: \"" + executor_name + "\"" }
    and fileContains ".atomist/executors/MyNewExecutor.ts" { "tags: [\"atomist/intent=" + bot_intent + "\"]" }


scenario AddRugExecutor should fail if not a Rug Archive project

let executor_name = "MyNewExecutor"
let project_name = "MyProject"
let description = "This executor rocks"
let bot_intent = "Do it"

given
  Empty

when
  AddRugExecutor

then
  NoChange
