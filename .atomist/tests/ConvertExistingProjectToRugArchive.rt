scenario ConvertExistingProjectToRugArchive should add Rug archive files

let archive_name = "my-rug-archive"
let group_id = "my-rug-group"
let version = "0.0.1"
let manifest = ".atomist/manifest.yml"

given
  Empty

when
  ConvertExistingProjectToRugArchive

then
  fileExists manifest
    and fileContains manifest { 'artifact: "' + archive_name + '"' }
    and fileContains manifest { 'group: "' + group_id + '"' }
    and fileContains manifest version

scenario ConvertExistingProjectToRugArchive should make no change if project already contains a manifest

given
  ArchiveRoot

when
  ConvertExistingProjectToRugArchive archive_name = "my-rug-archive",
    group_id = "my-rug-group", version = "0.0.1"

then
  NoChange
